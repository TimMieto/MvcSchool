                <label asp-for="MajorName" class="control-label"></label>
                <select asp-for="MajorName" class="form-control" asp-items="ViewBag.MajorName"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourseLevel" class="control-label"></label>
                <input asp-for="CourseLevel" class="form-control" />
                <span asp-validation-for="CourseLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDate" class="control-label"></label>
                <input asp-for="CourseDate" class="form-control" />
                <span asp-validation-for="CourseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseTime" class="control-label"></label>
                <input asp-for="CourseTime" class="form-control" />
                <span asp-validation-for="CourseTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

